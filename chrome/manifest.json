{
	"name": "Word Finder for YouTube™ Videos",
	"short_name": "YouTube™ Control+F",
	"version": "1.1.2",
	"description": "Search through YouTube videos for keywords.",
	"manifest_version": 2,
	"icons": {
	    "128": "icons/icon_128.png",
	    "48": "icons/icon_48.png",
	    "16": "icons/icon_16.png"
	  },
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/*"],
			"js": ["content.js", "config.js"],
			"css": ["css/vidscan-style.css"],
      		"run_at": "document_end"
		}
	],
	"background": {
	    "scripts": ["background.js"],
	    "persistent": false
	},
	"browser_action": {
      "default_popup": "index.html"
    },
	"permissions": [
		"storage"
	],
	"web_accessible_resources": ["icons/icon_128.png"]
}