{
	"name": "VideoScanner",
	"short_name": "VidScanner",
	"version": "1.0.0",
	"description": "Search through YouTube videos for keywords",
	"manifest_version": 2,
	"content_scripts": [
		{
			"matches": ["https://www.youtube.com/watch*"],
			"js": ["content.js", "config.js"],
      		"run_at": "document_end"
		}
	],
	"background": {
	    "scripts": ["background.js"],
	    "persistent": false
	},
	"browser_action": {
	    "default_title": "VidScanner",
	    "default_popup": "index.html"
	  },
	"permissions": [
		"activeTab",
		"https://ivz8pi8qv1.execute-api.us-west-2.amazonaws.com/prod*",
		"tabs"
	]
}